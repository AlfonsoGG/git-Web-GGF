@model List<GGF.Models.GetPatientsByTherapist_Result>
@{
    ViewBag.Title = "Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pacientes</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Estatus</th>
            <th>Fecha creacion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Status</td>
                <td>02 diciembre 2020</td>
                <td>
                    <a href="@Url.Action("DataShow","Patients")"><i class="fas fa-chart-pie"></i></a>
                    @if (item.isEditable == true)
                    {
                        @:| <a href="@Url.Action("Edit","Patients")"><i class="fas fa-edit"></i></a> | <i class="fas fa-user-minus"></i>
                    }
                </td>
            </tr>
        }

